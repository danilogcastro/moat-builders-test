<div class="row justify-content-center my-4">
  <div class="albums-form col-6">
    <%= simple_form_for(album) do |f| %>
      <%= f.input :name %>
      <%= f.input :year %>
      <%= f.association :artist %>
      <%= f.button :submit, class: "btn btn-success btn-block" %>
    <% end %>
  </div>
</div>